package com.patel.APIgateway.configuration;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.patel.APIgateway.filter.AuthenticationFilter;

@Configuration
public class GatewayConfig {

	@Bean
	public RouteLocator customRouteLocator(RouteLocatorBuilder builder, AuthenticationFilter authenticationFilter) {
		return builder.routes()
						.route("USER-MANAGEMENT-SERVICE", r -> r.path("/api/auth/**").filters(f -> f.filter(authenticationFilter))
								.uri("lb://USER-MANAGEMENT-SERVICE"))
						.route("MOVIE-SERVICE", r -> r.path("/api/movies/**").uri("lb://MOVIE-SERVICE"))
						.route("SHOWTIME-SERVICE", r -> r.path("/api/showtime/**").uri("lb://SHOWTIME-SERVICE"))
						.route("BOOKING-SERVICE", r -> r.path("/api/booking/**").uri("lb://BOOKING-SERVICE"))
						.build();
	}
}
