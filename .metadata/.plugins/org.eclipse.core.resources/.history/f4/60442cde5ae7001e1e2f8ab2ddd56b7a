package com.patel.APIgateway.configuration;

import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class GatewayConfig {

	@Bean
	public RouteLocator customRouteLocator(RouteLocatorBuilder builder) {
		return builder.routes()
						.route("USER-MANAGEMENT-SERVICE", r -> r.path("/api/auth/**").uri("http://localhost:8184"))
						.route("MOVIE-SERVICE", r -> r.path("/api/movies/**").uri("http://localhost:8083"))
						.route("SHOWTIME-SERVICE", r -> r.path("/api/showtime/**").uri("http://localhost:8082"))
						.route("BOOKING-SERVICE", r -> r.path("/api/booking/**").uri("http://localhost:8085"))
						.build();
	}
}
